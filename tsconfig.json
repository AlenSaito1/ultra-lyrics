{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "ESNext"
        ],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ]
}